table.canvas-table
  text-align center
  width 100%
  height 100%
  min-height 200px
  min-width 200px

canvas.bordered
  border 1px solid grey
  cursor pointer

div.buttons
  position absolute
  display inline-block
  margin 5px

a.button
  color             white
  background-color  $teal
  display           table-cell
  font-size         20px
  height            50px
  width             50px
  line-height       50px
  vertical-align    middle
  mix-border-radius(5px)
  &:hover
    background-color  $teal-light
